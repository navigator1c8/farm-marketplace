# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/farm-marketplace
MONGODB_TEST_URI=mongodb://localhost:27017/farm-marketplace-test

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@fermamarket.ru

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
FRONTEND_URL=http://localhost:5173

# Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
YANDEX_MONEY_SHOP_ID=your_shop_id
YANDEX_MONEY_SECRET_KEY=your_secret_key

# SMS Service
SMS_API_KEY=your_sms_api_key
SMS_SENDER=FarmaMarket

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
YANDEX_METRICA_ID=YANDEX_COUNTER_ID

# File Storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=http://localhost:5173